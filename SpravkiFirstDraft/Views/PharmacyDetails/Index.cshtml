@using SpravkiFirstDraft.Data.Enums
@using (Html.BeginForm("Import", "PharmacyDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Pharmacies Bulk Import</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <input type="file" name="ImageFile" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Import" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<hr />

@using (Html.BeginForm("Upload", "PharmacyDetails", FormMethod.Post))
{
<div class="form-horizontal">
    <h4>Pharmacy Manual Import</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="form-group">
            <label name="brandexId" class="control-label">Brandex Id</label>
            <input type="number" name="brandexId" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="name" class="control-label">Name</label>
            <input name="name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="pharmacyClass" class="control-label">Pharmacy Class</label>
            <select name="pharmacyClass" class="form-control" asp-items="@Html.GetEnumSelectList<PharmacyClass>()"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="active" class="control-label">Active</label>
            <input type="checkbox" name="active" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="companyName" class="control-label">Company Name</label>
            <input name="companyName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="pharmacyChainName" class="control-label">Pharmacy Chain Name</label>
            <input name="pharmacyChainName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="address" class="control-label">Address</label>
            <input name="address" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="cityName" class="control-label">City</label>
            <input name="cityName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="regionName" class="control-label">Region</label>
            <input name="regionName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="pharmnetId" class="control-label">Pharmnet Id</label>
            <input name="pharmnetId" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="phoenixId" class="control-label">Phoenix Id</label>
            <input name="phoenixId" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="sopharmaId" class="control-label">Sopharma Id</label>
            <input name="sopharmaId" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label name="stingId" class="control-label">Sting Id</label>
            <input name="stingId" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-primary" />
        </div>
    </div>
</div>
}
